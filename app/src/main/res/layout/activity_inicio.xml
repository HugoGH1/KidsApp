<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <TextView
        android:id="@+id/tvfondo"
        android:layout_width="434dp"
        android:layout_height="963dp"
        android:background="@drawable/fondo_mar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="407dp"
        android:layout_height="406dp"
        android:layout_marginTop="584dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cartel" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="239dp"
        android:layout_height="56dp"
        android:layout_marginTop="668dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="@font/bungeeinline_regular"
        android:rotation="-4"
        android:rotationY="4"
        android:text="@string/bienvenido"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="211dp"
        android:layout_height="49dp"
        android:layout_marginTop="724dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/bungeeinline_regular"
        android:rotation="-4"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="281dp"
        android:layout_height="105dp"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:fontFamily="@font/bungeeinline_regular"
        android:inputType="text"
        android:hint="Escribe tu nombre"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnJugar"
        style="@style/Widget.Material3.Button"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="64dp"
        android:backgroundTint="#7CD121"
        android:fontFamily="@font/bungeeinline_regular"
        android:text="@string/jugar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>